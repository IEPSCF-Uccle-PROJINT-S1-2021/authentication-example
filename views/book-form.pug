extends layout

block content
  h1= title
  form(method="post")
    .mb-3
      label.form-label(for="authorInput") Author
      input#authorInput.form-control(type="text", name="author", value=book.author)
    .mb-3
      label.form-label(for="titleInput") Title
      input#titleInput.form-control(type="text", name="title", value=book.title)
    .mb-3
      button.btn.btn-primary(type="submit") Save
      | &nbsp;
      a.btn.btn-outline-danger(href="/books") Cancel

